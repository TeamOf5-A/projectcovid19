<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#012E57"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="45dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <EditText
            android:id="@+id/mobilenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/input_file"
            android:backgroundTint="#fff"

            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="20dp"
            android:gravity="start"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="#123"

            android:textColorHint="#123" />

        <EditText
            android:id="@+id/mobilenumber2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/input_file2"
            android:backgroundTint="#fff"
            android:drawableStart="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="20dp"
            android:hint="mobile number"
            android:inputType="phone"
            android:padding="20dp"
            android:textColor="#123"
            android:textColorHint="#123" />


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="200dp"
        android:backgroundTint="#f0951f"
        android:src="@drawable/ic_baseline_east_24"
        app:layout_constraintBottom_toBottomOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="@id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@id/linearLayout"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/backtologin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Have a account? Login"
        android:textColor="#f0951f"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Account Already Exists"
        android:textColor="#f0951f"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/backtologin" />


</androidx.constraintlayout.widget.ConstraintLayout>